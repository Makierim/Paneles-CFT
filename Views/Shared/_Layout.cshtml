<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Paneles CFT</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand @((ViewData["Title"]?.ToString() == "Página Principal") ? "" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                    <img id="navimg" srcset="~/img/logo_cft.svg" alt="Logo_CFT" asp-append-version="true"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @((ViewData["Title"]?.ToString() == "Página Principal") ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Página Principal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @((ViewData["Title"]?.ToString() == "Mapa de Cálculo Solar") ? "active" : "")" asp-area="" asp-controller="Solar" asp-action="Map">Mapa</a>
                        </li>
                        <ul class="navbar-nav ms-auto align-items-center">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item me-2 text-muted">
                                    <span class="text">👤 @User.FindFirst("UsernameInstalador")?.Value</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-controller="Cuenta" asp-action="Logout" methop="post" class="d-inline">
                                        <button type="submit" class="btn btn-dark">Cerrar Sesión</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a asp-controller="Cuenta" asp-action="Login" class="btn btn-dark">Iniciar sesión</a>
                                </li>
                            }
                        </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p>&copy; 2025 - IrisSevenSoft - Paneles CFT - CFT Araucanía, Angol</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
