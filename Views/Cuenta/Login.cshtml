@model Paneles_CFT.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2 class="text-center">Iniciar Sesión</h2>

<form asp-action="Login" method="post" class="w-50 mx-auto mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group mb-3">
        <label asp-for="LoginInput"></label>
        <input asp-for="LoginInput" class="form-control" />
        <span asp-validation-for="LoginInput" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="Contrasena"></label>
        <input asp-for="Contrasena" class="form-control" type="password" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>
    
    <div class="form-check mb-3">
        <input asp-for="MantenerSesion" class="form-check-input" />
        <label asp-for="MantenerSesion" class="form-check-label"></label>
    </div>
    
    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger">@ViewBag.Mensaje</div>
    }
    
    <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}